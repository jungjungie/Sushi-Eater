<div id='mainContainer'>
    <h1>Let's Eat Sushi!</h1>

    {{!-- Form to capture user inputs for sushi they want to eat --}}
    <form id='add-sushi-form'>
        <input type='text' name='sushi' id='new-sushi' placeholder='What sushi roll do you want to eat?'>

        <button class='submitBtn' type='submit'>Submit</button>
    </form>

    {{!-- List of sushi that is ready to eat --}}
    <div id='readyContainer' class='container'>
        <h2>Ready to Eat:</h2>

        <ul>
            {{#each sushi}}
                {{#unless eaten eat=true}}
                    <li>{{sushi_name}} <button class='eatenBtn' data-id='{{id}}' data-nowEaten='{{eat}}'>
                        Eat it!
                    </button></li>
                {{/unless}}
            {{/each}}
        </ul>
    </div>

    {{!-- List of sushi that has been eaten --}}
    <div id='eatenContainer' class='container'>
        <h2>Already Eaten:</h2>

        <ul>
            {{#each sushi}}
                {{#if eaten eat=false}}
                    <li>{{sushi_name}}</li>
                    <button class='change-eaten' data-id='{{id}}' data-newEat='{{eat}}'>

                    </button>
                {{/if}}
            {{/each}}
        </ul>
    </div>
</div>